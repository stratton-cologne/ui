// tsconfig.json

{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "Bundler",
        "strict": true,
        "declaration": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": ["vite/client"],
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": ["src"]
}
